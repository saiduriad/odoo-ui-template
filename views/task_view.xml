<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_task_task_tree" model="ir.ui.view">
            <field name="name">task.task.tree</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <tree string="Tasks">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="view_task_task_kanban" model="ir.ui.view">
            <field name="name">task.task.kanban</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name" />
                    <field name="description" />

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li class="mb4">
                                            <strong>
                                                <field name="name" />
                                            </strong>
                                        </li>
                                        <li class="badge rounded-pill mb4">
                                            <field name="description" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>